<div>
  {{#if tasks}}
    <table class='table table-bordered table-hover table-dark'>
      <thead>
        <tr>
          <th>N.</th>
          <th>Task</th>
          <th>Description</th>
          <th>Operations</th>
        </tr>
      </thead>

      <tbody>
        {{#each tasks}}
          <tr>
            {{!-- <td>{{@index}}</td> --}}
            <td>{{displayIndex}}</td>
            <td>{{title}}</td>
            <td>{{description}}</td>
            <td>

              {{#if done}}
                <a href='/toggleDone/{{_id}}' class='btn btn-dark'>Undone</a>
              {{else}}
                <a href='/toggleDone/{{_id}}' class='btn btn-success'>Done</a>
              {{/if}}

              <a href='/edit/{{_id}}' class='btn btn-info'>Edit</a>
              <a href='/del/{{_id}}' class='btn btn-danger'>Delete</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <div class='h-100 d-flex align-items-center justify-content-center'>
      <div class='text-center text-white mt-4'>
        <h1>No Tasks</h1>
        <div class='mt-5'>
          <img src='/icons/icons8w11-o96.png' width='250' />
        </div>
      </div>
    </div>
  {{/if}}
</div>